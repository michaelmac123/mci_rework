= partial "layouts/header_carousel"

.container.call-out-section
  .row
    / .col-md-2.col-xs-4.text-center
    /   .call-out-circle.hidden-xs= image_tag 'bio-avatars/MCI-bio-avatar-1.png', alt: "Mitchell Contracting", class: 'ran-img call-out-avantar hide'
    .col-md-12.col-xs-12
      %h3.call-out-content= locals[:page_slogan]

.content-section-a
  .container
    .row
      .col-md-3.col-sm-6
        %h3.section-heading.margin-bottomgap0.med-blue
          In the News
        %hr.section-heading-spacer/
        .clearfix
    - data.news.each_with_index do |news_article, i|
      .row.news-articles.margin-gap10
        - if i > 0
          %hr.section-body-spacer.margin-bottomgap20
        .col-md-3.col-xs-12
          = image_tag "project-images/MCI-#{news_article['name'].parameterize}-1.jpg", class: "news-articles-image img-responsive", alt: "#{news_article['name'].titleize}"
        .col-md-9.col-xs-12
          %h4.news-articles-title= news_article['name']
          %h5.news-articles-sub-title= news_article['title']
          = truncate(news_article['details'].html_safe, length: 600)
          %a{ href: "images/press-releases/MCI-#{news_article['name'].parameterize}-1.pdf", class: "margin-leftgap10", target: "_blank" } Read More
