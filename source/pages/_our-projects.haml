- data.projects.each do |project|
  - if project['featured'] == "true"
    / Header
    #carousel-project-header.carousel.slide{ data:{ride:"carousel" } }
      %ol.carousel-indicators
        %li.active{ data:{target:"#carousel-project-header", slide:{to:"0"}}}
        %li{ data:{target:"#carousel-project-header", slide:{to:"1"}}}
        %li{ data:{target:"#carousel-project-header", slide:{to:"2"}}}

      .carousel-container
        .carousel{ data:{ride:"carousel" } }
          .carousel-inner{role: "listbox"}
            - project['images'].each_with_index do |image, i|
              .item{class: i < 1 ? "active" : "" }
                = image_tag "project-images/MCI-#{project['name'].parameterize}-#{image}.jpg", alt: "Mitchell Contracting | #{project['name']}", class: 'img-responsive'
                .carousel-caption
                  .carousel-caption-content
                    %h2.work-class= project['market_sector']
                    %h3
                      -unless project['headline'].blank?
                        %i= project['headline']
      %a.left.carousel-control{ href: "#carousel-project-header", role: "button", data:{slide: "prev"}}
        %span.glyphicon.glyphicon-chevron-left
        %span.sr-only Previous

      %a.right.carousel-control{ href:"#carousel-project-header", role:"button", data:{slide:"next"}}
        %span.glyphicon.glyphicon-chevron-right
        %span.sr-only Next


    .container.call-out-section
      .row
        .col-md-12.col-xs-12
          %h3.call-out-content= locals[:page_slogan]
    .content-section-a
      .container
        .row
          .col-md-12.col-sm-12
            %h2.section-heading.margin-gap0.med-blue Featured Project
        .row.project
          .col-md-3.col-sm-6
            %h3.section-heading.margin-bottomgap0.med-blue
              Project Outline
            %hr.section-heading-spacer/
            .clearfix
            %ul.list-unstyled.project-outline-list
              - unless project['project_name'].blank?
                %li.list-title Project
              %li= project['project_name']
              - unless project['client'].blank?
                %li.list-title Client
              %li= project['client']
              - unless project['architect'].blank?
                %li.list-title Architect
              %li= project['architect']
              - unless project['engineer'].blank?
                %li.list-title Engineer
              %li= project['engineer']
              - unless project['location'].blank?
                %li.list-title Location
              %li= project['location']
              - unless project['duration'].blank?
                %li.list-title Duration
              %li= project['duration']
              - unless project['market_sector'].blank?
                %li.list-title Market Sector
              %li= link_to project['market_sector'], "/our-services"
              - unless project['core_market'].blank?
                %li.list-title Core
              - project['core_market'].each do |core|
                %li= core

          .col-md-8.col-sm-6
            %h3.section-heading.margin-bottomgap0.med-blue Project Story
            %hr.section-heading-spacer/
            %p.section-body-text.clear-left
              .col-md-5.pull-right= image_tag "project-images/MCI-senior-living-1.jpg", class: "img-responsive project-image"
              = project['story']
            %h3.section-heading.margin-bottomgap0.med-blue Project Objective
            %hr.section-heading-spacer/
            %p.section-body-text.clear-left= project['objective']
            %h3.section-heading.margin-bottomgap0.med-blue Project Solution
            %hr.section-heading-spacer/
            %p.section-body-text.clear-left= project['solution']

.content-section-b
  .container
    .row
      .col-md-12.col-sm-12
        %h2.section-heading.margin-bottomgap0.med-blue Additional Projects
    - data.projects.each do |project|
      - if project['additional_projects'] == "true"
        .row.project
          .col-md-4.col-sm-12
            %h3.margin-bottomgap0
              = link_to "#{project['client']}","our-projects/#{project['name'].parameterize}", class: "project-section-heading med-blue"
              / = project['client']
        .row.project-featured
          .col-md-4.col-xs-12= image_tag "project-images/MCI-steelframing-1.png", class: "img-responsive"
          .col-md-8.col-xs-12
            %h3.section-heading.margin-gap0.med-blue Project Story
            %hr.section-heading-spacer/
            %h4.clear-left= project['headline'].blank? ?  "&nbsp;" : project['headline']
            %p.section-body-text.clear-left><
              = truncate(project['story'], length: 600)
              = link_to "Learn More","our-projects/#{project['name'].parameterize}", class: "margin-leftgap10"

.banner
  .banner-bar
    .container
      .row
        .col-md-12
          %h2 Getting the job done right, the first time...  on time, on budget!