= partial "layouts/header_carousel"

.container.call-out-section
  .row
    / .col-md-2.col-xs-4.text-center
    /   .call-out-circle.hidden-xs= image_tag 'bio-avatars/MCI-bio-avatar-1.png', alt: "Mitchell Contracting", class: 'ran-img call-out-avantar hide'
    .col-md-12.col-xs-12
      %h3.call-out-content= locals[:page_slogan]

.content-section-a
  .container
    .row
      .col-md-3.col-sm-6
        %h3.section-heading.margin-bottomgap0.med-blue
          Our Services
        %hr.section-heading-spacer/
        .clearfix
.content-section-b
  .row.service
    -data.services.each do |serv|
      %div{ class: "col-md-4 col-xs-12 service-container #{serv['hide']}" }
        .service-box
          .service-text
            .service-inner
              %i{ class: "fa fa-#{serv['icon']} fa-4x" }
              %h6.service-title= serv['title']
              %ul.service-list
                - unless serv['details'].blank?
                  - serv['details'].each do |details|
                    %li.service-content= details
        %hr.section-body-spacer.visible-xs-block.margin-gap0



.banner
  .banner-bar
    .container
      .row
        .col-md-12
          %h2 Getting the job done right, the first time...  on time, on budget!