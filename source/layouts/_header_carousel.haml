/ Header
.intro-header
  #carousel-example-generic.carousel.slide{ data:{ride:"carousel" } }
    %ol.carousel-indicators
      %li.active{ data:{target:"#carousel-example-generic", slide:{to:"0"}}}
      %li{ data:{target:"#carousel-example-generic", slide:{to:"1"}}}
      %li{ data:{target:"#carousel-example-generic", slide:{to:"2"}}}

    .carousel-inner{role: "listbox"}
      .item.active
        = link_to (image_tag 'images/main-header-image.jpg', alt: "Mitchell Contracting", class: 'img-responsive'), '/'
        .carousel-caption.pull-right
          %h2.dress-class.padding-gap10
            Project Name #1
      .item
        = link_to (image_tag 'images/main-header-image.jpg', alt: "Mitchell Contracting", class: 'img-responsive'), '/'
        .carousel-caption
          %h2.dress-class.padding-gap10
            Project Name #2

      .item
        = link_to (image_tag 'images/main-header-image.jpg', alt: "Mitchell Contracting", class: 'img-responsive'), '/'
        .carousel-caption
          %h2.dress-class.padding-gap10
            Project Name #3

    %a.left.carousel-control{ href: "#carousel-example-generic", role: "button", data:{slide: "prev"}}
      %span.glyphicon.glyphicon-chevron-left
      %span.sr-only Previous

    %a.right.carousel-control{ href:"#carousel-example-generic", role:"button", data:{slide:"next"}}
      %span.glyphicon.glyphicon-chevron-right
      %span.sr-only Next

